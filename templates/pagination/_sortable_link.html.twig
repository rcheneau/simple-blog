<a  {% for attr, value  in attributes %}
    {{ attr }}="{{ value }}" {% endfor %}
    {{ ajaxMode ? 'data-controller="pagination"' : '' }}
    data-action="pagination#goTo"
>
    <span class="float-end">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fa fa-sort-down"></i>
            {% else %}
                <i class="fa fa-sort-up"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
    </span>
    {{ title }}
</a>
