{# Show notification on page load: {% include '_toast.html.twig' %} #}

<div class="toast align-items-center text-white border-0 {{ bg | default('bg-primary') }}"
     role="alert"
     aria-live="assertive"
     aria-atomic="true"
        {{ stimulus_controller('toast') }}
>
    <div class="d-flex">
        <div class="toast-body">
            {{ content | default('') }}
        </div>
        <button type="button"
                class="btn-close btn-close-white me-2 m-auto"
                data-bs-dismiss="toast"
                aria-label="Close"
        >
        </button>
    </div>
</div>